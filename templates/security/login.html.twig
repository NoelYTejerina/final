{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión - MySpotify{% endblock %}

{% block content %}
<main class="login-container">
    <h1>Iniciar Sesión</h1>

    {% if error %}
        <div class="alert alert-danger">
            {% if error.messageKey == 'Invalid credentials.' %}
                Datos incorrectos. Por favor, inténtalo de nuevo.
            {% else %}
                {{ error.messageKey|trans(error.messageData, 'security') }}
            {% endif %}
        </div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post" class="login-form">
        <div class="form-group">
            <label for="username">Email:</label>
            <input type="email" id="username" name="_username" value="{{ last_username }}" required autofocus>
        </div>

        <div class="form-group">
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="_password" required>
        </div>

        <button type="submit" class="btn-login">Iniciar Sesión</button>
    </form>

    <p class="register-link">¿Aún no estás registrado? <a href="{{ path('app_register') }}">Hazlo aquí</a>.</p>
</main>
{% endblock %}