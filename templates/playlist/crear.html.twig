{% extends 'base.html.twig' %}

{% block title %}Crear Playlist{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">➕ Crear Nueva Playlist</h1>
        
        <form action="{{ path('playlist_guardar') }}" method="POST">
            <div class="form-group">
                <label for="nombre">🎵 Nombre de la Playlist:</label>
                <input type="text" id="nombre" name="nombre" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="visibilidad">👀 Visibilidad:</label>
                <select id="visibilidad" name="visibilidad" class="form-control">
                    <option value="publica">Pública</option>
                    <option value="privada">Privada</option>
                </select>
            </div>

            <div class="form-group">
                <label for="canciones">🎼 Añadir Canciones:</label>
                <select id="canciones" name="canciones[]" class="form-control" multiple>
                    {% for cancion in canciones %}
                        <option value="{{ cancion.id }}">{{ cancion.titulo }} - {{ cancion.autor }}</option>
                    {% endfor %}
                </select>
                <small class="text-muted">Mantén presionada la tecla Ctrl (Cmd en Mac) para seleccionar varias canciones.</small>
            </div>

            <button type="submit" class="btn btn-success mt-3">✅ Crear Playlist</button>
            <a href="{{ path('playlist_listar_playlists') }}" class="btn btn-secondary mt-3">❌ Cancelar</a>
        </form>
    </div>
{% endblock %}
