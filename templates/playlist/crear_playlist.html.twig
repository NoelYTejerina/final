{% extends 'base.html.twig' %}

{% block title %}Crear Playlist{% endblock %}

{% block content %}
<div class="form-container">
    <h1>Crear Playlist</h1>
    
    <div class="form-box">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nombre) }}
                {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-group">
                {{ form_label(form.visibilidad) }}
                {{ form_widget(form.visibilidad, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-group">
                <label>Canciones</label>
                <div class="canciones-container">
                    {{ form_widget(form.canciones, { 'attr': {'class': 'canciones-lista'} }) }}
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Crear Playlist</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
